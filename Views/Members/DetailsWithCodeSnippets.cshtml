@model MyFirstMVCAppIordacheCatalin.ViewModels.MemberCodesnippetsViewModel

@{
    ViewData["Title"] = "DetailsWithCodeSnippets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailsWithCodeSnippets</h1>

<div>
    <h4>MemberCodesnippetsViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Positios)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Positios)
        </dd>
    </dl>
</div>
@*<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IDMember  }) |
    <a asp-action="Index">Back to List</a>
</div>*@
<label asp-for="CodeSnippets" class="control-label">Code Snippets for this member</label>
@foreach (var item in Model.CodeSnippets)
{
    <div style="border: 1px solid black;padding:10px">
        <div>
            <span>
                CodeSnippet Title:
            </span>
            <span>
                @Html.DisplayFor(modelItem => item.Title)
            </span>

        </div>
        <div>
            <span>
                CodeSnippet ContentCode:
            </span>
            <span>
                @Html.DisplayFor(modelItem => item.ContentCode)
            </span>

        </div>
        <div>
            <span>
                CodeSnippet Revision :
            </span>
            <span>
                @Html.DisplayFor(modelItem => item.Revision )
            </span>

        </div>
    </div>
    <p>
        @Html.ActionLink("Back to list", "Index")
    </p>
}



